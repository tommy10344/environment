{
  "editor.tabSize": 2,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "HackGen",
  "editor.fontSize": 14,
  "editor.wordWrap": "off",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.renderWhitespace": "all",
  "editor.fontLigatures": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  "terminal.integrated.fontSize": 14,
  // "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "zsh",
      "icon": "star"
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh",

  "files.autoGuessEncoding": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "Fastfile": "ruby"
  },

  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "vscode-icons",

  "debug.onTaskErrors": "abort",

  "git.autofetch": true,
  "gitlens.hovers.currentLine.over": "line",

  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.smartcase": true,
  "vim.visualstar": true,
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.easymotion": true,
  "vim.enableNeovim": true,
  // "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.normalModeKeyBindings": [
    { "before": [";"], "after": [":"] },
    { "before": [":"], "after": [";"] },
    { "before": ["<Space>", "h"], "after": ["0"] },
    { "before": ["<Space>", "l"], "after": ["$"] },
    { "before": ["<Space>", "k"], "after": ["H"] },
    { "before": ["<Space>", "j"], "after": ["L"] },
    { "before": ["<C-h>"], "after": ["g", "T"] },
    { "before": ["<C-l>"], "after": ["g", "t"] },
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["*"], "after": ["*", "z", "z"] },
    { "before": ["#"], "after": ["#", "z", "z"] },
    { "before": ["g", "*"], "after": ["g", "*", "z", "z"] },
    { "before": ["g", "#"], "after": ["g", "#", "z", "z"] }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["<Space>", "h"], "after": ["0"] },
    { "before": ["<Space>", "l"], "after": ["$"] },
    { "before": ["<Space>", "k"], "after": ["H"] },
    { "before": ["<Space>", "j"], "after": ["L"] }
  ],
  "vim.insertModeKeyBindings": [
    { "before": ["j", "j"], "after": ["<Esc>"] },
    { "before": ["<C-j>"], "after": ["<Down>"] },
    { "before": ["<C-k>"], "after": ["<Up>"] },
    { "before": ["<C-h>"], "after": ["<Left>"] },
    { "before": ["<C-l>"], "after": ["<Right>"] }
  ],

  "markdown-pdf.styles": ["~/.config/vscode-markdown-github.css"],
  "explorer.confirmDragAndDrop": false,

  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",

  "ruby.intellisense": "rubyLocate",
  "ruby.useLanguageServer": true,
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true
  },

  "python.jediEnabled": false,
  "python.languageServer": "Default",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.enable": true,
  "eslint.run": "onSave",

  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "dart.debugExternalLibraries": true,
  "dart.debugSdkLibraries": false,
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,

  "[csharp]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.formatOnSave": true
  },
  "omnisharp.enableEditorConfigSupport": true,

  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "http://localhost:8080"
}
