{
  "editor.tabSize": 2,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "HackGen",
  "editor.fontSize": 14,
  "editor.wordWrap": "off",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.fontLigatures": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  "terminal.integrated.fontSize": 14,
  // "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "zsh",
      "icon": "star"
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh",

  "files.autoGuessEncoding": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "Fastfile": "ruby"
  },

  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "vscode-icons",

  "git.autofetch": true,
  "gitlens.hovers.currentLine.over": "line",

  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.smartcase": true,
  "vim.visualstar": true,
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.easymotion": true,
  "vim.easymotionKeys": "sdfghjkl",
  "vim.enableNeovim": true,
  // "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.normalModeKeyBindings": [
    { "before": [";"], "after": [":"] },
    { "before": [":"], "after": [";"] },
    { "before": ["<Space>", "h"], "after": ["0"] },
    { "before": ["<Space>", "l"], "after": ["$"] },
    { "before": ["<Space>", "k"], "after": ["H"] },
    { "before": ["<Space>", "j"], "after": ["L"] },
    { "before": ["<C-h>"], "after": ["g", "T"] },
    { "before": ["<C-l>"], "after": ["g", "t"] },
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["*"], "after": ["*", "z", "z"] },
    { "before": ["#"], "after": ["#", "z", "z"] },
    { "before": ["g", "*"], "after": ["g", "*", "z", "z"] },
    { "before": ["g", "#"], "after": ["g", "#", "z", "z"] }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["<Space>", "h"], "after": ["0"] },
    { "before": ["<Space>", "l"], "after": ["$"] },
    { "before": ["<Space>", "k"], "after": ["H"] },
    { "before": ["<Space>", "j"], "after": ["L"] }
  ],
  "vim.insertModeKeyBindings": [
    { "before": ["j", "j"], "after": ["<Esc>"] },
    { "before": ["<C-j>"], "after": ["<Down>"] },
    { "before": ["<C-k>"], "after": ["<Up>"] },
    { "before": ["<C-h>"], "after": ["<Left>"] },
    { "before": ["<C-l>"], "after": ["<Right>"] }
  ],

  "markdown-pdf.styles": ["~/.config/vscode-markdown-github.css"],
  "explorer.confirmDragAndDrop": false,

  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",

  "ruby.intellisense": "rubyLocate",
  "ruby.useLanguageServer": true,

  "python.jediEnabled": false,
  "python.languageServer": "Default",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.enable": true,
  "eslint.run": "onSave",

  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },

  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "dart.debugExternalLibraries": true,
  "dart.debugSdkLibraries": false,
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,

  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "http://localhost:8080",

  "vsnotes.defaultNotePath": "~/work/vsnote",
  "vsnotes.noteTitleConvertSpaces": " ",
  "vsnotes.defaultNoteTitle": "{dt}_{title}.{ext}",
  "vsnotes.tokens": [
    {
      "type": "datetime",
      "token": "{dt}",
      "format": "YYYY-MM-DD",
      "description": "Insert formatted datetime."
    },
    {
      "type": "title",
      "token": "{title}",
      "description": "Insert note title from input box.",
      "format": "Untitled"
    },
    {
      "type": "extension",
      "token": "{ext}",
      "description": "Insert file extension.",
      "format": "md"
    }
  ]
}
